{% set translation_link = "contact" %}

{% extends "_layout_zh.njk" %} 
{% block hrefLanguage %}
         <link rel="alternate" hreflang="en-US" href="https://snakesoftaiwan.com/contact_zh.html" />
         <link rel="alternate" hreflang="en" href="https://snakesoftaiwan.com/contact_zh.html" />
     <link rel="alternate" hreflang="zh-TW" href="https://snakesoftaiwan.com/contact.html" />
     <link rel="alternate" hreflang="zh" href="https://snakesoftaiwan.com/contact.html" />
{% endblock %}
{% block metaDescription %}
    "與我們聯繫-有關這本書，學校教育計劃或任何其他查詢的信息。"
{% endblock %}
{% block headLinks %}
    <link rel="stylesheet" href="css/contact.min.css">
{% endblock %}
{% block csp %}
    <meta http-equiv="Content-Security-Policy" content="default-src 'none'; img-src 'self' https://www.google-analytics.com www.google-analytics.com https://stats.g.doubleclick.net; script-src 'self' https://www.google-analytics.com https://cdnjs.cloudflare.com/ajax/libs/dompurify/2.2.6/purify.min.js; media-src 'self'; connect-src 'self' https://www.google-analytics.com www.google-analytics.com https://stats.g.doubleclick.net; style-src 'self';">
{% endblock %}
{% block title %}
    Contact
{% endblock %}
{% block content %}

    <div class="header-box">
        <h1 class="header">聯繫</h1>
    </div> 

    <form id="form" action="https://formspree.io/f/mrgonlpp" method="POST" class="form-contact" novalidate>
        <div class="form-group">
            <label for="formName" class="contact-label">名稱</label>
            <input id="formName" name="name" class="form-input" type="text" autofocus maxlength="50" required>
            <small>Error message</small>
        </div>
        <div class="form-group">
            <label for="formEmail" class="contact-label">電子郵件</label>
            <input id="formEmail" name="_replyto" class="form-input" type="text" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" maxlength="50" required>   
            <small>Error message</small>
        </div>
        <div class="form-group">
            <label for="formUserMessage" class="contact-label">信息</label>
            <textarea id="formUserMessage" name="message" class="form-input" maxlength="5000" required></textarea>
            <small>Error message</small>
        </div>

        <button class="contact-btn" type="submit" value="Send">提交</button>
    </form>

    <script src="js/contact_zh.min.js"></script>

{% endblock %}