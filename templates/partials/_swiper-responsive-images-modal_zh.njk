
<!-- Swiper Modal -->
<div id="simpleModal" class="modal">
    <div class="modal-content">
        <button id="modalClose" class="close-btn-modal" tabindex="0">&times;</button>
        <div id="swiper-container-modal" class="swiper-container-modal">
            <div class="swiper-wrapper">
                {%- set numberOfImages = species[0].imgWidthsModal | length -%}
                {%- for i in range(numberOfImages) %} 
                {%- set numberPrefix = "0" -%}
                {%- if i > 8 -%}
                    {%- set numberPrefix = "" -%}
                {% endif %}
                <div class="swiper-slide swiper-slide-modal">
                    <picture>
                        <source
                            type="image/webp"
                            data-srcset="
                            {%- set comma = joiner() -%}
                            {%- for j in species[0].imgWidthsModal[i] %}
                            {{ comma() -}} images/{{- species[0].nameLowerCaseHyphenated -}}/{{- species[0].nameUpperCaseHyphenated -}}-{{ numberPrefix }}{{ i + 1 }}-{{ j }}px.webp {{ j }}w
                            {%- endfor %}"
                            sizes="100vw">
                        <source
                            type="image/jpeg"
                            data-srcset="
                            {%- set comma = joiner() -%}
                            {%- for j in species[0].imgWidthsModal[i] %}
                            {{ comma() -}} images/{{- species[0].nameLowerCaseHyphenated -}}/{{- species[0].nameUpperCaseHyphenated -}}-{{ numberPrefix }}{{ i + 1 }}-{{ j }}px.jpg {{ j }}w
                            {%- endfor %}"
                            sizes="100vw">
                        <img class="swiper-lazy swiper-slide-img swiper-slide-img-modal" 
                            width="{{- species[0].imgWidthsModal[i] | last }}"
                            height="{{- species[0].imageHeightsModalMax[i] }}"                     
                            data-src="images/{{- species[0].nameLowerCaseHyphenated -}}/{{- species[0].nameUpperCaseHyphenated -}}-{{ numberPrefix }}{{ i + 1 }}-{{ species[0].imgWidthsModal[i] | last }}px.jpg"  
                            aria-label="{{- species[0].chineseName }} 圖片 {{ i + 1 }} - 模態">
                    </picture>
                    <div class="swiper-lazy-preloader swiper-lazy-preloader-white"></div>   
                </div>
                {%- endfor %}
            </div>
        </div>
        <!-- Add Pagination -->
        <div id="swiper-pagination-modal" class="swiper-pagination"></div>
        <!-- Add Pagination -->
        <div id="swiper-button-next-modal" class="swiper-button-next"></div>
        <div id="swiper-button-prev-modal" class="swiper-button-prev"></div>
    </div>
</div>
                

